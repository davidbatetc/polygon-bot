p14 := copy p1
p15 := copy p1
p16 := copy p1
p17 := copy p1
p18 := copy p1
p19 := copy p1
p20 := copy p1

// Scaling the copies, each by a different factor
scale p2, 0.95
scale p3, 0.90
scale p4, 0.85
scale p5, 0.80
scale p6, 0.75
scale p7, 0.70
scale p8, 0.65
scale p9, 0.60
scale p10, 0.55
scale p11, 0.50
scale p12, 0.45
scale p13, 0.40
scale p14, 0.35
scale p15, 0.30
scale p16, 0.25
scale p17, 0.20
scale p18, 0.15
scale p19, 0.10
scale p20, 0.05

